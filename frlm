#! /bin/bash

#============================================================================================================
#                 https://twitter.com/mahamdi.amine
#============================================================================================================
yellow='\e[1;33m'
green='\e[0;34m'
BlueF='\e[1;34m'
path=$(pwd)
clear
# check for root access
if [[ $UID -ne 0 ]]
then
	echo 'sudo !!'
	echo
	exit 1
fi

arg=$1
mode=$2
interface=$3

if [ " $arg " = ' init ' ] ; then
echo
echo -e $yellow"  [*] Initialisation ..."
echo -e $BlueF""
service network-manager stop;
macchanger -r wlan0 > /dev/null
macchanger -r eth0 > /dev/null
service network-manager start;
echo
echo -e $yellow"  [*] Done ."
sleep 1
echo
clear
elif
[ " $arg " = ' ghoston ' ] ; then
echo -e $yellow "   Becaming ghost in the net ..."
ghost on wlan0 ;
ghost on eth0 ;
echo -e $yellow"  [*] Done ."
sleep 1
elif
[ " $arg " = ' ghostoff ' ] ; then
echo -e $yellow "   turning off the mode  ghost in the net ..."
  ghost off wlan0 ;
  ghost off eth0 ;
echo -e $yellow"  [*] Done ."
sleep 1
elif
[ " $arg " = ' kick ' ] ; then
	clear
python /Scripts/kickthemout-master/kickthemout.py ;
  clear
elif
[ " $arg " = ' kill ' ] ; then
	echo -e $yellow "   starting wifijammer "
python /root/Downloads/GITHUB/wifijammer/wifijammer.py
sleep 1
elif
[ " $arg " = ' chess ' ] ; then
	pathSave=$(pwd)
 systemctl start nginx.service
 systemctl start mongodb.service
 cd /root/lila/
 sh /root/lila/bin/dev run > /dev/null &
 google-chrome l.org > /dev/null &
	sleep 1
	cd pathSave
elif
[ " $arg " = ' open ' ] ; then
	nautilus --browser $path
elif [ " $arg " = ' -h ' ] || [ " $arg " = ' --help ' ]; then
		echo ""
		echo "[option]"
		echo ""
		echo " init = Initialisation "
		echo ""
		echo " ghost on  "
		echo ""
		echo " ghost off "
		echo ""
		echo " kick = kickthemout"
		echo ""
		echo " kill = wifijammer "
		echo ""
		echo " chess = start lichess in localhost "
		echo ""
		echo " open "
		echo ""
		echo " -h = help "
		echo ""
	   else
		echo -e $green " use  frlm -h for help "
fi
